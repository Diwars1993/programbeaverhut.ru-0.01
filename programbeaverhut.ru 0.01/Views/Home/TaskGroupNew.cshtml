@using programbeaverhut.ru.Models
@model programbeaverhut.ru.Models.TaskGroupHi
@{
    ViewBag.Title = "Добавление задачу";
}

<div class="card border">
    <!-- card-header -->
    <div class="card-header">
        <form class="form-row align-items-center ">
            <h5>Создать группу клиентов</h5>
        </form>
    </div>
    <form method="post" asp-action="taskGroupNew" asp-controller="home" class="card-body">

        <div class="form-group">
            <label asp-for="NameTaskGroup" class="control-label">Название группы задач</label>
            <input type="datetime" asp-for="NameTaskGroup" class="form-control" />
        </div>

        <div class="form-group">
            <input type="submit" value="Сохранить" class="form-group btn btn-outline-dark" />
        </div>
    </form>
</div>
