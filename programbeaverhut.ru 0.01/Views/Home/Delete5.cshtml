@model programbeaverhut.ru.Models.Service
@{
    ViewBag.Title = "Удаление услуги в заказе";
}

<div class="card border-primary" style="margin: 0px 0px 15px 0px;">

    <div class="card-header">
        <form class="form-row align-items-center ">
            <h4>Удаление услуги " @Html.DisplayFor(Service => Service.ServiceDescription)"</h4>
        </form>
    </div>

    <div class="card-body">

        <h6>Данные нельзя будет востоновить! Проверьте данные перед удалением.</h6>
        <div style="margin: 0px 0px 10px 0px;">
            <a>The data cannot be restored!</a>
        </div>

        <dl class="dl-horizontal">
            <dt>Название услуги</dt>
            <dd>
                @Html.DisplayFor(Service => Service.ServiceDescription)
            </dd>
        </dl>
        <dl class="dl-horizontal">
            <dt>Стоимость услуги</dt>
            <dd>
                @Html.DisplayFor(Service => Service.ServicePrice)
            </dd>
        </dl>

        <div>
            <form asp-controller="Home" asp-action="Delete5" method="post">
                <div class="form-group">
                    <input type="submit" class="form-group btn btn-outline-dark" value="Удалить" />
                </div>
            </form>
        </div>
    </div>
</div>
