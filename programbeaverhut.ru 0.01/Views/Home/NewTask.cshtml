@using programbeaverhut.ru.Models
@model programbeaverhut.ru.Models.Tasks
@{
    ViewBag.Title = "Добавление задачу";
}


<form method="post" asp-action="newTask" asp-controller="home">

    <!--Это нужно что бы передать ReportingPeriodId и так как нам не надо что бы туда внасили он в скрытом формате -->
    <input type="hidden" value="@ViewBag.TasksHiId" name="TaskGroupHiId" />
    

    <div class="form-group">
        <label asp-for="Date" class="control-label">Дата и время</label>
        <input type="datetime" asp-for="Date" placeholder="00.00.0000 0:00:00" class="form-control" />
    </div>
    <!--Выпадающий список -->
    <div class="form-group">
        <label name="Employees">Сотрудник(и)</label>
        <select name="Employees" asp-items="ViewBag.Staff" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label">Описание</label>
        <textarea type="text" asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-sm btn-primary" />
    </div>
</form>
