@model programbeaverhut.ru.Models.MessagesRequests
@{
    ViewBag.Title = "Редактирование сообщения в поддержке";
}

<div class="card border">

    <!-- card-header -->
    <div class="card-header">
        <form class="form-row align-items-center ">
            <h5>Редактировать сообщение</h5>
        </form>
    </div>

    <div class="card-body">
        <form asp-action="edit8" asp-controller="home" asp-route-id="@Model.MessagesRequestsId">

            <div class="form-group">
                <input type="hidden" asp-for="UserName" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="UserId1" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="RequestHiName" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="RequestHiId1" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="MessagesRequestsId" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Date" />
            </div>


            <div class="form-group">
                <label asp-for="Message" class="control-label">Ваше сообщение</label>
                <input type="text" asp-for="Message" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Сохранить" class="form-group btn btn-outline-dark" style="margin-bottom: 4px;" />
            </div>
        </form>
    </div>

</div>