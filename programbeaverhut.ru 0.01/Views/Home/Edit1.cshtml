@model programbeaverhut.ru.Models.Service
@{
    ViewBag.Title = "Редактирование услуги";
}
<!--Эта форма аналогична форме в представлении для создания нового объекта за исключением атрибута asp-route-id="@Model.ServiceId".
Установка этого атрибута позволяет при отправке данных вместе с ними также отправить и значение Model.Id.
Без этого значения Entity Framework не сможет обновить соответствующую модель в базе данных.-->
<form asp-action="edit1" asp-controller="home" asp-route-id="@Model.ServiceId">

    <!--Так как в отличии от клиента товар превяз к одному из клиентов, нужно передовать ClientId.
        И почему то нужно передовать еще и ProductId а иначе содаеться новый товар. Для этого внизу два скрытых поля -->
    <div class="form-group">
        <input type="hidden" asp-for="ServiceId" />
    </div>
    <div class="form-group">
        <input type="hidden" asp-for="ClientId" />
    </div>

    <!--Это выподающий список -->
    <div class="form-group">
        <label name="ServiceDescription">Офис</label>
        <select name="ServiceDescription" asp-items="ViewBag.ServiceName" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="ServicePrice" class="control-label">Цвет</label>
        <input type="text" asp-for="ServicePrice" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>