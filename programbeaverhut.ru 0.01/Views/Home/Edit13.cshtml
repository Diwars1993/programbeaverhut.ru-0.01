@model programbeaverhut.ru.Models.Staff
@{
    ViewBag.Title = "Сотрудники";
}

<div class="card border">

    <!-- card-header -->
    <div class="card-header">
        <form class="form-row align-items-center ">
            <h5>Редактировать Сотрудники</h5>
        </form>
    </div>

    <div class="card-body">
        <form asp-action="edit13" asp-controller="home" asp-route-id="@Model.Id">

            <div class="form-group">
                <input type="hidden" asp-for="UserName" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="UserId1" />
            </div>

            <div class="form-group">
                <label asp-for="StaffName" class="control-label">ФИО Сотрудника</label>
                <input type="text" asp-for="StaffName" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="StaffTelephone" class="control-label">Телефон</label>
                <input type="text" asp-for="StaffTelephone" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Сохранить" class="form-group btn btn-outline-dark" style="margin-bottom: 4px;" />
            </div>
        </form>
    </div>
</div>

