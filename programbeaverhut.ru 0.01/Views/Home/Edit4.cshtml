@model programbeaverhut.ru.Models.Tasks
@{
    ViewBag.Title = "Редактирование задачу";
}

<div class="card border" style="margin: 0px 0px 15px 0px;">

    <div class="card-header">
        <form class="form-row align-items-center ">
            <h5>Редактирование задачи</h5>
        </form>
    </div>

    <form asp-action="edit4" asp-controller="home" asp-route-id="@Model.Id" class="card-body">

        <div class="form-group">
            <input type="hidden" asp-for="UserName" />
        </div>
        <div class="form-group">
            <input type="hidden" asp-for="UserId1" />
        </div>
        <div class="form-group">
            <input type="hidden" asp-for="TaskGroupHiId" />
        </div>


        <div class="form-group">
            <label asp-for="Date" class="control-label">Имя</label>
            <input type="text" asp-for="Date" class="form-control" />
        </div>
        <!--Выпадающий список -->
        <div class="form-group">
            <label name="Employees">Сотрудник(и)</label>
            <select name="Employees" asp-items="ViewBag.Staff" class="form-control"></select>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label">Описание</label>
            <textarea type="text" asp-for="Description" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <input type="submit" value="Сохранить" class="form-group btn btn-outline-dark" style="margin-bottom: 4px;" />
        </div>
    </form>
</div>
