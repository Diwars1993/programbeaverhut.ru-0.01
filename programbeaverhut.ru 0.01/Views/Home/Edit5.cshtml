@model programbeaverhut.ru.Models.TaskGroupHi
@{
    ViewBag.Title = "Редактирование группы задач";
}

<div class="card border">

    <!-- card-header -->
    <div class="card-header">
        <form class="form-row align-items-center ">
            <h5>Редактировать группу задач</h5>
        </form>
    </div>

    <div class="card-body">
        <form asp-action="edit5" asp-controller="home" asp-route-id="@Model.TaskGroupHiId">

            <div class="form-group">
                <input type="hidden" asp-for="UserName" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="UserId1" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="TaskGroupHiId" />
            </div>


            <div class="form-group">
                <label asp-for="NameTaskGroup" class="control-label">Имя</label>
                <input type="text" asp-for="NameTaskGroup" class="form-control" />
            </div>


            <div class="form-group">
                <input type="submit" value="Сохранить" class="form-group btn btn-outline-dark" style="margin-bottom: 4px;" />
            </div>
        </form>
    </div>
</div>
