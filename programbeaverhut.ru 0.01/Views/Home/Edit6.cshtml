@model programbeaverhut.ru.Models.Chat1
@{
    ViewBag.Title = "Редактирование сообщения в обьявлениях";
}

<div class="card border">

    <!-- card-header -->
    <div class="card-header">
        <form class="form-row align-items-center ">
            <h5>Редактировать обьявление</h5>
        </form>
    </div>

    <div class="card-body">
        <form asp-action="edit6" asp-controller="home" asp-route-id="@Model.Chat1Id">

            <div class="form-group">
                <input type="hidden" asp-for="UserName" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="UserId1" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="ReportingPeriodId" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Chat1Date" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Chat1Id" />
            </div>

            <div class="form-group">
                <label asp-for="NameUser" class="control-label">Заголовок</label>
                <input type="text" asp-for="NameUser" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Message" class="control-label">Ваше сообщение</label>
                <input type="text" asp-for="Message" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Сохранить" class="form-group btn btn-outline-dark" style="margin-bottom: 4px;" />
            </div>
        </form>
    </div>

</div>