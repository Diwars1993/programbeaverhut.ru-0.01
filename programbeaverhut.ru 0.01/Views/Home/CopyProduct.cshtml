@model programbeaverhut.ru.Models.Product
@{
    ViewBag.Title = "Редактирование пользователя";
}
<!--Эта форма аналогична форме в представлении для создания нового объекта за исключением атрибута asp-route-id="@Model.ProductId".
Установка этого атрибута позволяет при отправке данных вместе с ними также отправить и значение Model.Id.
Без этого значения Entity Framework не сможет обновить соответствующую модель в базе данных.-->
<form asp-action="edit2" asp-controller="home" asp-route-id="@Model.ProductId ">

    <!--Так как в отличии от клиента товар превяз к одному из клиентов, нужно передовать ClientId.
        Не дублирем ProductId как в редоктировании, что бы создался новый товар. Для этого внизу два скрытых поля -->
    <div class="form-group">
        <input type="hidden" asp-for="ClientId" />
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label">Описание</label>
        <textarea type="text" asp-for="Description" class="form-control" ></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Colour" class="control-label">Цвет</label>
        <input type="text" asp-for="Colour" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Glass" class="control-label">Стекло</label>
        <input type="text" asp-for="Glass" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Quantity" class="control-label">Количество</label>
        <input type="text" asp-for="Quantity" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label">Цена</label>
        <input type="text" asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Discount" class="control-label">Скидка</label>
        <input type="text" asp-for="Discount" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>
