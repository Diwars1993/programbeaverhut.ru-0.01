@model programbeaverhut.ru.Models.Client
@{
    ViewBag.Title = "Редактирование данных клиента";
}

<div class="card border">
    <!-- card-header -->
    <div class="card-header">
        <form class="form-row align-items-center ">
            <h5>Редактирование данных клиента</h5>
        </form>
    </div>
    <!--Эта форма аналогична форме в представлении для создания нового объекта за исключением атрибута asp-route-id="@Model.ClientId".
        Установка этого атрибута позволяет при отправке данных вместе с ними также отправить и значение Model.Id.
        Без этого значения Entity Framework не сможет обновить соответствующую модель в базе данных.-->
    <form asp-action="edit" asp-controller="home" asp-route-id="@Model.ClientId" class="card-body">

        <!--Это нужно что бы передать OrderAssemblyStage значение, и так как нам не надо что бы туда внасили он в скрытом формате -->
        <input type="hidden" value="@ViewBag.OrderAssemblyStage" name="OrderAssemblyStage" />
        <!--Это нужно что бы передать AmountGoods значение, и так как нам не надо что бы туда внасили он в скрытом формате -->
        <input type="hidden" value="@ViewBag.AmountGoods" name="AmountGoods" />
        <!--Это нужно что бы передать AmountService значение, и так как нам не надо что бы туда внасили он в скрытом формате -->
        <input type="hidden" value="@ViewBag.AmountService" name="AmountService" />


        <!--нужно передолвать ReportingPeriodId -->
        <div class="form-group">
            <input type="hidden" asp-for="ReportingPeriodId" />
        </div>
        <div class="form-group">
            <input type="hidden" asp-for="ClientId" />
        </div>


        <div class="form-group">
            <label asp-for="ContractNumber" class="control-label">Номер договора</label>
            <input type="text" asp-for="ContractNumber" class="form-control" />
        </div>

        <!--Выпадающий список -->
        <div class="form-group">
            <label asp-for="NameLegalEntity">Компания</label>
            <select asp-for="LegalEntityId" asp-items="ViewBag.LegalEntitys" class="form-control"></select>
        </div>
        <!--Выпадающий список категории -->
        <div class="form-group">
            <label asp-for="Name">Категория</label>
            <select asp-for="CategoryId" asp-items="ViewBag.Сategories" class="form-control"></select>
        </div>
        <!--Выпадающий список офисы -->
        <div class="form-group">
            <label asp-for="Name">Офис</label>
            <select asp-for="OfficesId" asp-items="ViewBag.Offices" class="form-control"></select>
        </div>

        <!-- Выпадающий список офисы. -->
        <div class="form-group">
            <label asp-for="Manager">ФИО заполняющего менеджера</label>
            <select asp-for="StaffId" asp-items="ViewBag.Staffs" class="form-control"></select>
        </div>

        <div class="form-group">
            <label asp-for="SNM" class="control-label">ФИО Клиента</label>
            <input type="text" asp-for="SNM" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Address" class="control-label">Адрес доставки</label>
            <input type="text" asp-for="Address" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Telephone" class="control-label">Контактный телефон</label>
            <input type="text" asp-for="Telephone" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Date" class="control-label">Дата оформления</label>
            <input type="date" asp-for="Date" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="PassportData" class="control-label">Паспортные данные (Для физ лиц)</label>
            <input type="text" asp-for="PassportData" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ClientINN" class="control-label">ИНН (Для юр лиц)</label>
            <input type="text" asp-for="ClientINN" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ClientOGRIP" class="control-label">ОГРИП (Для юр лиц)</label>
            <input type="text" asp-for="ClientOGRIP" class="form-control" />
        </div>
        <!--Выпадающий список категории -->
        <div class="form-group">
            <label asp-for="ColorId">Цветовое выделение</label>
            <select asp-for="ColorId" asp-items="ViewBag.ColorSelections" class="form-control"></select>
        </div>
        <div class="form-group">
            <input type="submit" value="Сохранить" class="form-group btn btn-outline-dark" />
        </div>
    </form>
</div>