@model programbeaverhut.ru.Models.RequestHi
@{
    ViewBag.Title = "Редактировать запрос пользователя в поддержке";
}

<div class="card border">

    <!-- card-header -->
    <div class="card-header">
        <form class="form-row align-items-center ">
            <h5>Редактировать запрос</h5>
        </form>
    </div>

    <div class="card-body">
        <form asp-action="edit7" asp-controller="home" asp-route-id="@Model.Id">

            <div class="form-group">
                <input type="hidden" asp-for="UserName" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="UserId1" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="UnreadUser" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="UnreadAdmin" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" />
            </div>


            <div class="form-group">
                <label asp-for="Topic" class="control-label">Тема запроса</label>
                <input type="text" asp-for="Topic" class="form-control" />
            </div>


            <div class="form-group">
                <input type="submit" value="Сохранить" class="form-group btn btn-outline-dark" style="margin-bottom: 4px;" />
            </div>
        </form>
    </div>

</div>
